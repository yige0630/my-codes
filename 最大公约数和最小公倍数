#include<iostream>
using namespace std;
int a, b, a1, b2, l;
int gcd(int x, int y)
{
	if (!y)
		return x;
	else
		return gcd(y, x%y);
}
int lcm(int x, int y)
{
	return (x*y) / gcd(x, y);
}
int main()
{
	cout << "请输入两个正整数" << endl;
	int a, b, c,d;
	cin >> a >> b;
	if (a > b)
	{
		c = gcd(a, b);
		d = lcm(a, b);
	}
	if (a < b)
	{
		c = gcd(b, a);
		d = lcm(b, a);
	}
	cout << "最大公约数" << c << endl;
	cout << "最小公倍数" << d << endl;
	return 0;
}
